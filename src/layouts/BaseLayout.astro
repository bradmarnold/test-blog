---
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
}
const { title = 'Your Blog', description = 'Thoughts, notes, and writings.' } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${base}og.svg`} />
    <meta property="twitter:card" content="summary_large_image" />
    <link rel="icon" href={`${base}favicon.svg`} />
    <link rel="alternate" type="application/rss+xml" title="RSS" href={`${base}rss.xml`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Newsreader:opsz,wght@6..72,600&display=swap" rel="stylesheet" />
  </head>
  <body>
    <slot />
  </body>
</html>