---
export interface Props {
  href: string;
  title: string;
  description?: string;
  date?: string;
  tags?: string[];
}

const { href, title, description, date, tags = [] } = Astro.props;
---
<article class="card group">
  <a href={href} class="block">
    <h3 class="text-lg font-semibold text-gray-900 group-hover:text-accent-700 transition">
      {title}
    </h3>
    {description && <p class="mt-2 text-gray-600">{description}</p>}
    <div class="mt-4 flex items-center gap-3 text-xs text-gray-500">
      {date && <time datetime={date}>{new Date(date).toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: 'numeric' })}</time>}
      {tags.length > 0 && (
        <ul class="flex flex-wrap gap-2">
          {tags.map((t) => <li class="rounded-full border border-accent-200 px-2 py-0.5 text-accent-700">{t}</li>)}
        </ul>
      )}
    </div>
  </a>
</article>